package com.company;

import java.util.Scanner;

public class Hometask4p2 {
    public static void main(String[] args) {
        int num;
        String str = "";
        Scanner sc = new Scanner(System.in);
        System.out.print("Input an integer number: ");
        num = sc.nextInt();
        while(num > 0)
        {
            int y = num % 2;
            str = y + str;
            num = num / 2;
        }
        System.out.println("The binary number is: " + str);
        sc.close();
    }
}

